<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="col-md-4">
  <div class="well">
    <div class="row">
      <div class="col-md-12">
		  <div class="form-group">
		  	<%= f.label :username, "Nombre de Usuario" %>
		  	<%= f.text_field :username, :autofocus => true, :class=>'form-control input-sm', :title => "Por favor ingrese nombre de usuario", :required => true %>
		  </div>

		  <div class="form-group">
		  	<%= f.label :password, "Contraseña" %>
		  	<%= f.password_field :password, :class=>'form-control input-sm', :title => "Por favor ingrese contraseña", :required => true %>
		  </div>

		  <% if devise_mapping.rememberable? -%>
		    <div class="form-group">
		    	<%= f.check_box :remember_me %> <%= f.label :remember_me, "¿recordarme?" %>
		    </div>
		  <% end -%>
		  <div class="form-group">
          	<input type="submit" value="Ingresar" class="btn btn-primary">
          </div>
		</div>
	</div>
  </div>
</div>
<% end %>

