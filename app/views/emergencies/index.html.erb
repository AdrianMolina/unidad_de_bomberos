<div class="row">
<div class="col-md-11 column">

<%= month_calendar day_names: "date.day_names" , table: {class: "table table-bordered"}, tr: {class: "calendar-row"}, td: {class: "day" }, emergencies: Emergency.all do |date, emergencies| %>
  <%= date.day %>
  <% @emergencies.each do |emergency| %>
    <% if  emergency.created_at.to_date == date %>
      <div><%= emergency.lugar %></div>
    <% end %>
  <% end %>
<% end %>

</div>
</div>


<div id="emergencies_calendar" >
  <%= render partial: "calendar", locals: {emergencies: @emergencies} %>
</div>

<br>
<br>
<div class="row">
  <div class="col-lg-6">
    <div class="page-header">
         <h1 id="forms">Emergencias</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-6">
    <h4>Buscar por numero de caso, denunciante, direccion o sigla vehiculo</h4>
    <br>
    <%= form_tag emergencies_path, :method => 'get' do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Buscar", :name => nil, :class => 'btn btn-primary btn' %> 
    <% end %>
  </div>
</div>
<br>
<div class="col-lg-12">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Numero caso</th>
              <th>Lugar</th>
              <th>Denunciante</th>
              <th>Observacion</th>
              <th>Despachador</th>
              <th>Tipo</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @emergencies.each do |emergency| %>
              <tr>
                <td><%= emergency.numero_caso %></td>
                <td><%= emergency.lugar %></td>
                <td><%= emergency.denunciante %></td>
                <td><%= emergency.observacion %></td>
                <td><%= emergency.user.nombre %></td>
                <td><%= emergency.tipo %></td>
                <td align="center"><%= link_to 'Mostrar', emergency %> |
                    <%= link_to 'Editar', edit_emergency_path(emergency),'data-no-turbolink' => true %> |
                    <%= link_to 'Eliminar', emergency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <td align="center"><a href="<%=formularios_path(emergency)%>" class="btn btn-primary btn-sm active" role="button">Ver Formularios</a></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <a data-no-turbolink="true" href="<%=new_emergency_path%>" class="btn btn-danger btn-sm active" role="button">Registrar Emergencia</a>
</div>