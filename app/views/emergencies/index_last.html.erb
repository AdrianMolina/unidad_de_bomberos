<br>
<div class="row">
<div class="col-lg-6">
  <div class="page-header">
       <h1 id="forms">Emergencias en curso</h1>
  </div>
</div>
</div>
<br>
<div class="col-lg-12">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Numero caso</th>
              <th>Lugar</th>
              <th>Denunciante</th>
              <th>Observacion</th>
              <th>Despachador</th>
              <th>Tipo</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @emergencies.each do |emergency| %>
              <tr>
              <% if emergency.estado == false %>
                <td><%= emergency.numero_caso %></td>
                <td><%= emergency.lugar %></td>
                <td><%= emergency.denunciante %></td>
                <td><%= emergency.observacion %></td>
                <td><%= emergency.user.nombre %></td>
                <td><%= emergency.tipo %></td>
                <td align="center"><%= link_to 'Mostrar', emergency,'data-no-turbolink' => true %> |
                    <%= link_to 'Editar', edit_emergency_path(emergency),'data-no-turbolink' => true %> |
                    <%= link_to 'Emergencia resuelta', activo_path(emergency) %>
                <td align="center"><a href="<%=formularios_path(emergency)%>" class="btn btn-primary btn-sm active" role="button">Ver Formularios</a></td>
              <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <a data-no-turbolink="true" href="<%=new_emergency_path%>" class="btn btn-danger btn-sm active" role="button">Registrar Emergencia</a>
</div>