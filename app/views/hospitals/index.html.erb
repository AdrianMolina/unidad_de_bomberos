<div class="col-md-12">
  <div class="page-header">
       <h1 id="forms">Lista de Hospitales</h1>
  </div>
</div>

<div class="col-md-8">
  <div class="well">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Hospital</th>
              <th>Telefono</th>
              <th>Nivel</th>
              <th>Tipo</th>
              <th>Direccion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @hospitals.each do |hospital| %>
              <tr>
                <td style= 'cursor:pointer' onclick=<%="document.location.href='/vehicles/"+hospital.id.to_s+"'"%>><%= hospital.nombre_hospital %></td>
                <td style= 'cursor:pointer' onclick=<%="document.location.href='/vehicles/"+hospital.id.to_s+"'"%>><%= hospital.telefono %></td>
                <td style= 'cursor:pointer' onclick=<%="document.location.href='/vehicles/"+hospital.id.to_s+"'"%>><%= hospital.nivel %></td>
                <td style= 'cursor:pointer' onclick=<%="document.location.href='/vehicles/"+hospital.id.to_s+"'"%>><%= hospital.tipo %></td>
                <td style= 'cursor:pointer' onclick=<%="document.location.href='/vehicles/"+hospital.id.to_s+"'"%>><%= hospital.direccion %></td>
                <td align="center">
                    <%= link_to 'Editar', edit_hospital_path(hospital), :class => 'btn btn-primary btn-sm' %>
                    <%= link_to 'Destroy', hospital, method: :delete, :class => 'btn btn-danger btn-sm',data: { confirm: 'Esta seguro?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <a data-no-turbolink="true" href="<%=new_hospital_path%>" class="btn btn-primary btn-sm active" role="button">Registrar Hospital</a>
</div>