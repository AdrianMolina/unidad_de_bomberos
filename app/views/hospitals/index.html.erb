<h1>Listing hospitals</h1>

<table>
  <thead>
    <tr>
      <th>Nombre hospital</th>
      <th>Telefono</th>
      <th>Nivel</th>
      <th>Tipo</th>
      <th>Direccion</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.nombre_hospital %></td>
        <td><%= hospital.telefono %></td>
        <td><%= hospital.nivel %></td>
        <td><%= hospital.tipo %></td>
        <td><%= hospital.direccion %></td>
        <td><%= hospital.latitude %></td>
        <td><%= hospital.longitude %></td>
        <td><%= link_to 'Show', hospital %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital) %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

