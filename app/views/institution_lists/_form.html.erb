<%= form_for @institution_list, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>

<% if @institution_list.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h3><%= pluralize(@institution_list.errors.count, "Errore") %> no se puede guardar la informacion porque:</h3>
      <ul>
        <% @institution_list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      </div>
    <% end %>
<div class="col-md-4">
  <div class="well">
    <div class="row">
      <div class="col-md-12">
        <fieldset>
          <div class="form-group">
            <%= f.label :sigla, "*Sigla" %><br>
            <%= f.text_field :sigla, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor ingrese la sigla de la institucion", :required => true %>
          </div>
          <div class="form-group">
            <%= f.label :nombre, "*Nombre" %><br>
            <%= f.text_field :nombre, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor ingrese el nombre de la institucion", :required => true %>
          </div>
          <div class="form-group">
            <input type="submit" value="Registrar" class="btn btn-primary">
            <a href="<%=institution_lists_path%>" class="btn btn-default btn-sm active" role="button"> Atras </a>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>
<% end %>