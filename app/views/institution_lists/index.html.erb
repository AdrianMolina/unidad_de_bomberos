<div class="col-lg-12">
  <div class="page-header">
       <h1 id="forms">Lista de Instituciones</h1>
  </div>
</div>

<div class="col-lg-8">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Sigla</th>
              <th>Nombre</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @institution_lists.each do |institution_list| %>
              <tr>
                <td><%= institution_list.sigla %></td>
                <td><%= institution_list.nombre %></td>
                <td align="center"><%= link_to 'Mostrar', institution_list %> |
                    <%= link_to 'Editar', edit_institution_list_path(institution_list) %> |
                    <%= link_to 'Eliminar', institution_list, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <a href="<%=new_institution_list_path%>" class="btn btn-primary btn-sm active" role="button">Registrar Nueva institucion</a>
</div>