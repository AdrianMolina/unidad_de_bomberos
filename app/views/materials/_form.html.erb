<%= form_for @material, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
  <% if @material.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@material.errors.count, "error") %> prohibited this material from being saved:</h2>

      <ul>
      <% @material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <form role="form">
    <div class="row clearfix">
      <div class="col-md-4 column">
        <div class="well">
            <div class="form-group">
             <label for="exampleInputPassword1">*Nombre Material</label>
             <%= f.text_field :nombre_material, :class=>'form-control', :maxlength => 30 , :title => "Por favor ingrese el nombre", :required => true %>
            </div>
            <div class="form-group">
             <label for="exampleInputPassword1">*Codigo</label>
             <%= f.text_field :codigo, :class=>'form-control', :maxlength => 30 , :title => "Por favor ingrese el codigo", :required => true %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Especialidad</label>
                <select id = "especialidad" name = "material[especialidad]" class='form-control input-sm' >
                  <option value="Incendio">Incendio</option>
                  <option value="Rescate">Rescate</option>
                  <option value="Explosivo">Explosivo</option>
                  <option value="Atencion Pre Hospitalaria">Atencion Pre Hospitalaria</option>
                </select>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Estado</label>
                <select id = "estado" name = "material[estado]" class='form-control input-sm' >
                  <option value="Malo">Malo</option>
                  <option value="Regular">Regular</option>
                  <option value="Bueno">Bueno</option>
                </select>
            </div>
            <div class="form-group">
             <label for="exampleInputPassword1">*Ubicacion</label>
             <%= f.text_field :ubicacion, :class=>'form-control', :maxlength => 30 , :title => "Por favor ingrese la ubicacion", :required => true %>
            </div>
            <input type="submit" value="Registrar Material" class="btn btn-danger">
            <a href="<%=materials_path%>" class="btn btn-default btn-sm active" role="button"> Atras </a> 
        </div>
      </div>
    </div>
  </form>
</div>
<% end %>