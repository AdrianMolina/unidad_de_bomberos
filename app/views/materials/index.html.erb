<br>
<div class="row">
  <div class="col-lg-6">
    <div class="page-header">
         <h1 id="forms">Materiales</h1>
    </div>
  </div>
</div>

<div class="col-lg-12">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Nombre Material</th>
              <th>Especialidad</th>
              <th>Codigo</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @materials.each do |material| %>
            <tr>
                <td style= 'cursor:pointer' onclick=<%="document.location.href='/materials/"+material.id.to_s+"'"%>><%= material.nombre_material %></td>
                <td style= 'cursor:pointer' onclick=<%="document.location.href='/materials/"+material.id.to_s+"'"%>><%= material.especialidad %></td>
                <td style= 'cursor:pointer' onclick=<%="document.location.href='/materials/"+material.id.to_s+"'"%>><%= material.codigo %></td>
                <td align="center">
                    <%= link_to 'Editar', edit_material_path(material), :class => 'btn btn-primary btn-sm','data-no-turbolink' => true %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <a data-no-turbolink="true" href="<%=new_material_path%>" class="btn btn-danger btn-sm active" role="button">Registrar Material Nuevo</a>
</div>