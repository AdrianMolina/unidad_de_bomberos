<%= form_for @user, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
<% if @user.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h3><%= pluralize(@user.errors.count, "Errore") %> no se puede guardar la informacion porque:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      </div>
    <% end %>
<div class="col-md-8 column">
  <div class="well">
    <div class="row">
      <div class="col-md-12 column">
        <fieldset>
          <div class="row">
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :nombre, "*Nombre" %>
                <%= f.text_field :nombre, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor ingrese su nombre", :required => true %>
              </div>
            </div>
            <div class="col-md-2 column">
              <div class="form-group">
              
              </div>
            </div>
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :apellido, "*Apellido Paterno" %>
                <%= f.text_field :apellido, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor ingrese su apellido", :required => true %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :ap_materno, "Apellido Materno" %>
                <%= f.text_field :ap_materno, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor rellene este campo" %>
              </div>
            </div>
            <div class="col-md-2 column">
              <div class="form-group">
              
              </div>
            </div>
            <div class="col-md-5 column">
              <div class="form-group">
              <%= f.label :username, "*Nombre de usuario" %>
              <%= f.text_field :username, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor ingrese su nombre de usuario", :required => true %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :fecha_nacimiento, "*Fecha de nacimiento" %>
                <%= f.date_field :fecha_nacimiento, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor debe ingresar su fecha de nacimiento", :required => true %>
              </div>
            </div>
            <div class="col-md-2 column">
              <div class="form-group">
              
              </div>
            </div>
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :egreso, "*Año de egreso" %>
                <%= f.text_field :egreso, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor ingrese el anio de egreso", :required => true %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :institucion, "Intitucion de egreso" %>
                <select id = "user_institucion" name = "user[institucion]" class='form-control input-sm' >
                    <option value="anapol">Academia Nacional de Policias</option>
                    <option value="esbapol">Escuela Basica de Policias</option>
                  </select>
              </div>
            </div>
            <div class="col-md-2 column">
              <div class="form-group">
              
              </div>
            </div>
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :rango, "*Rango" %>
                <%= f.select(:rango, [["General","General"],["Coronel","Coronel"],["Teniente-Coronel","Teniente-Coronel"],["Mayor","Mayor"],["Capitan","Capitan"],["Teniente","Teniente"],["Sub-Teniente","Sub-Teniente"],["Sub-Oficial Superior","Sub-Oficial Superior"],["Sub-Oficial Mayor","Sub-Oficial Mayor"],["Sub-Oficial Primero","Sub-Oficial Primero"],["Sub-Oficial Segundo","Sub-Oficial Segundo"],["Sargento Primero","Sargento Primero"],["Sargento Segundo","Sargento Segundo"],["Cabo","Cabo"],["Policia","Policia"]].collect {|p| p }, {  include_blank: 'Seleccione su rango'}, { :class=>'form-control input-sm', :required => true}) %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :escalafon, "*Numero de escalafon" %>
                <%= f.text_field :escalafon, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor ingrese su numero de escalafon", :required => true %>
              </div>
            </div>
            <div class="col-md-2 column">
              <div class="form-group">
              
              </div>
            </div>
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :especialidad, "*Unidades comando departamental" %>
                <%= f.select(:especialidad, [["CMDO. DPTL.","CMDO. DPTL."],["SUB-CMDO","SUB-CMDO"],["INSPECTOR","INSPECTOR"],["PERSONAL D-1","PERSONAL D-1"],["INTELIGENCIA D-2","INTELIGENCIA D-2"],["PLANEAMIENTO D-3","PLANEAMIENTO D-3"],["ADMINISTRATIVA D-4","ADMINISTRATIVA D-4"],["1 ER. BAT. COMANDANTE","1 ER. BAT. COMANDANTE"],["1 ER. BAT. SB CMDTE","1 ER. BAT. SB CMDTE"],["2DO. BAT. SEG. F. EST","2DO. BAT. SEG. F. EST"],["ABRA","ABRA"],["BOMBEROS","BOMBEROS"],["BRIGADA FLIA.","BRIGADA FLIA."],["BIENESTAR SOCIAL","BIENESTAR SOCIAL"],["CAMINERA","CAMINERA"],["CANES","CANES"],["CEFOTES DIRECTOR","CEFOTES DIRECTOR"],["CEFOTES SUB DIRECTOR","CEFOTES SUB DIRECTOR"],["CLINICA POLICIAL","CLINICA POLICIAL"],["DELTA","DELTA"],["DIPROVE DIRECTOR","DIPROVE DIRECTOR"],["DIPROVE SUB DIRECTOR","DIPROVE SUB DIRECTOR"],["ESBAPOL DIRECTOR","ESBAPOL DIRECTOR"],["FISCAL POLICIAL","FISCAL POLICIAL"],["FELCC DIRECTOR","FELCC DIRECTOR"],["FELCC SUB DIRECTOR","FELCC SUB DIRECTOR"],["FELCC PUNATA","FELCC PUNATA"],["INTERPOL","INTERPOL"],["JEDECOES","JEDECOES"],["PAC","PAC"]].collect {|p| p }, {  include_blank: 'Seleccione una opcion'}, { :class=>'form-control input-sm', :required => true}) %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :cargo, "*Cargo actual" %>
                <%= f.text_field :cargo, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor ingrese su cargo actual", :required => true %>
              </div>
            </div>
            <div class="col-md-2 column">
              <div class="form-group">
              
              </div>
            </div>
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :telefono, "Numero de telefono fijo" %>
                <%= f.text_field :telefono, :class=>'form-control input-sm', :maxlength => 7 %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :celular, "Numero de celular" %>
                <%= f.text_field :celular, :class=>'form-control input-sm', :maxlength => 8 %>
              </div>
            </div>
            <div class="col-md-2 column">
              <div class="form-group">
              
              </div>
            </div>
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :email, "*Correo electronico" %>
                <%= f.email_field :email, :autofocus => true, :class=>'form-control input-sm', :required => true %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :password, "*Contraseña" %>
                <%= f.password_field :password, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor ingrese su password", :required => true %>
              </div>
            </div>
            <div class="col-md-2 column">
              <div class="form-group">
              
              </div>
            </div>
            <div class="col-md-5 column">
              <div class="form-group">
                <%= f.label :password_confirmation, "*Confirmar contraseña" %>
                <%= f.password_field :password_confirmation, :class=>'form-control input-sm', :maxlength => 30 , :title => "Por favor vuelva a escribir su password", :required => true %>
              </div>
            </div>
          </div>

            <div class="form-group">
              <input type="submit" value="Registrar" class="btn btn-primary">
              <a href="<%=index_users_path%>" class="btn btn-default btn-sm active" role="button"> Atras </a>
            </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>
<% end %>
<script type="text/javascript">
  jQuery('#user_fecha_nacimiento').datetimepicker({
     format:'d/m/Y',
    timepicker:false
  });
</script>