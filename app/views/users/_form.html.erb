<%= form_for @user, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
<div class="col-lg-4">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
        <fieldset>
          <div class="form-group">
            <%= f.label :nombre, "Nombre" %>
            <%= f.text_field :nombre, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :apellido, "Apellido Paterno" %>
            <%= f.text_field :apellido, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :ap_materno, "Apellido Materno" %>
            <%= f.text_field :ap_materno, :class=>'form-control input-sm' %>
          </div>
          <div class="form-group">
          <%= f.label :username, "Nombre de usuario" %>
          <%= f.text_field :username, :class=>'form-control input-sm' %>
        </div>

          <div class="form-group">
            <%= f.label :fecha_nacimiento, "Fecha de nacimiento" %>
            <%= f.date_field :fecha_nacimiento, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :egreso, "Anio de egreso" %>
            <%= f.text_field :egreso, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :institucion, "Intitucion de egreso" %>
            <select id = "user_institucion" name = "user[institucion]" class='form-control input-sm' >
                <option value="anapol">Academia Nacional de Policias</option>
                <option value="esbapol">Escuela Basica de Policias</option>
              </select>
          </div>

          <div class="form-group">
            <%= f.label :rango, "Rango" %>
            <%= f.text_field :rango, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :escalafon, "Numero de escalafon" %>
            <%= f.text_field :escalafon, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :especialidad, "Area de especialidad" %>
            <%= f.text_field :especialidad, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :cargo, "Cargo actual" %>
            <%= f.text_field :cargo, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :telefono, "Numero de telefono fijo" %>
            <%= f.text_field :telefono, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :celular, "Numero de celular" %>
            <%= f.text_field :celular, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, :autofocus => true, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, :class=>'form-control input-sm' %>
          </div>

          <div class="form-group">
            <input type="submit" value="Registrar" class="btn btn-primary">
            <a href="<%=index_users_path%>" class="btn btn-default btn-sm active" role="button"> Atras </a>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>
<% end %>
