<div class="col-lg-12">
  <div class="page-header">
       <h1 id="forms">Lista de usuarios</h1>
  </div>
</div>

<div class="col-lg-8">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Rango</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <% if user.estado == "activo" %> 
                <tr>
                  <td><%= user.nombre %></td>
                  <td><%= user.apellido %></td>
                  <td><%= user.rango %></td>
                  <td align="center"><%= link_to 'Mostrar', show_user_path(user) %> |
                      <%= link_to 'Editar', edit_user_path(user) %> |
                      <%= link_to 'dar de baja', cambio_de_estado_usuario_path(user), data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <a href="<%=new_user_path%>" class="btn btn-primary btn-sm active" role="button">Registrar Nuevo Usuario</a>
</div>