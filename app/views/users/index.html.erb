<br>
<div class="col-md-12">
  <div class="page-header">
       <h1 id="forms">Lista de usuarios</h1>
  </div>
</div>

<div class="col-md-8">
  <div class="well">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Rango</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <% if user.estado == "activo" %> 
                <tr>
                  <td style= 'cursor:pointer' onclick=<%="document.location.href='/users/show_user/"+user.id.to_s+"'"%>><%= user.nombre %></td>
                  <td style= 'cursor:pointer' onclick=<%="document.location.href='/users/show_user/"+user.id.to_s+"'"%>><%= user.apellido %></td>
                  <td style= 'cursor:pointer' onclick=<%="document.location.href='/users/show_user/"+user.id.to_s+"'"%>><%= user.rango %></td>
                  <td align="center">
                      <%= link_to 'Editar', edit_user_path(user), :class => 'btn btn-primary btn-sm' %>
                      <%= link_to 'dar de baja', cambio_de_estado_usuario_path(user), :class => 'btn btn-danger btn-sm', data: { confirm: 'Esta seguro?' } %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <a href="<%=new_user_path%>" class="btn btn-primary btn-sm active" role="button">Registrar Nuevo Usuario</a>
  <BR>
  <center><%= paginate @users %></center>
</div>