<p id="notice"><%= notice %></p>
<br>
<div class="col-xs-12 col-md-12">
  <div class="page-header">
       <h2 id="forms">Usuario</h2>
  </div>
</div>
<div class="col-xs-12 col-md-12">
  <div class="row">
    <div class="col-xs-4 col-md-2">
    </div>
    <div class="col-xs-9 col-md-7">
    <div class="col-xs-12 col-md-12">
      <div class="well">
      <div class="row">
        <div class="col-xs-8 col-md-6">
          <div class="field">
            <h4><strong>Nombre:</strong>
            <%= @user.nombre %></h4>
          </div>
        </div>
        <div class="col-xs-8 col-md-6">
          <div class="field">
            <h4><strong>Apellidos:</strong>
              <%= @user.apellido %> <%= @user.ap_materno%></h4>              
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-8 col-md-6">
          <div class="field">
            <h4><strong>Rango:</strong>
            <%= @user.rango %></h4>
          </div>
        </div>
        <div class="col-xs-8 col-md-6">
          <div class="field">
            <h4><strong>Numero de escalafon:</strong>
            <%= @user.escalafon %></h4>              
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-8 col-md-6">
          <div class="field">
            <h4><strong>Especialidad:</strong>
              <%= @user.especialidad %></h4>
          </div>
        </div>
        <div class="col-xs-8 col-md-6">
          <div class="field">
            <h4><strong>Telefono:</strong>
              <%= @user.telefono %> - <%= @user.celular %> </h4>              
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-8 col-md-6">
          <div class="field">
            <h4><strong>Institución:</strong>
            <%= @user.institucion %></h4>
          </div>
        </div>
        <div class="col-xs-8 col-md-6">
          <div class="field">
            <h4><strong>Año de egreso:</strong>
              <%= @user.egreso %></h4>              
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-8 col-md-6">
          <div class="field">
            <h4><strong>Cargo que ocupa:</strong>
            <%= @user.cargo %></h4>
          </div>
        </div>
        <div class="col-xs-8 col-md-6">
          <div class="field">
            <h4><strong>Correo electronico:</strong>
              <%= @user.email %></h4>              
          </div>
        </div>
      </div>
        </div>
      </div>
    </div>
  </div>
  <div class="field">
    <a href="<%=index_users_path%>" class="btn btn-primary btn-sm active" role="button">Lista de usuarios</a>
  </div>
</div>