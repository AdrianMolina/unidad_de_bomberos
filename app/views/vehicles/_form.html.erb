<%= nested_form_for @vehicle, :html => { :class => 'form-horizontal', :role => 'form' } do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
      <% @vehicle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-lg-4">
  <div class="well">
    <div class="row">
      <div class="col-lg-12">
        <fieldset>
          <div class="form-group">
            <%= f.label :sigla %><br>
            <%= f.text_field :sigla, :class=>'form-control input-sm' %>
          </div>
          <div class="form-group">
            <%= f.label :placa %><br>
            <%= f.text_field :placa, :class=>'form-control input-sm' %>
          </div>
          <div class="form-group">
            <%= f.label :modelo %><br>
            <%= f.text_field :modelo, :class=>'form-control input-sm' %>
          </div>
          <div class="form-group">
            <%= f.label :especialidad %><br>
            <%= f.text_field :especialidad, :class=>'form-control input-sm' %>
          </div>
          <%= f.fields_for :drivers %>
          <div class="form-group">
            <input type="submit" value="Registrar" class="btn btn-primary">
            <a href="<%=vehicles_path%>" class="btn btn-default btn-sm active" role="button"> Atras </a>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>
<% end %>